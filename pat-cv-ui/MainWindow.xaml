<Window x:Class="pat_cv_ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pat_cv_ui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="用户列表" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- 用户列表 -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  SelectedCellsChanged="DataGrid_SelectedCellsChanged"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="姓名" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>
                <DataGridTextColumn Header="邮箱" 
                                    Binding="{Binding Email}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 添加用户区域 -->
        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="10"
                Background="#F5F5F5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 姓名输入 -->
                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="姓名:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         Text="{Binding NameWait2Add, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,5"
                         Height="25"/>

                <!-- 邮箱输入 -->
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Text="邮箱:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <TextBox Grid.Row="1" 
                         Grid.Column="1" 
                         Text="{Binding EmailWait2Add, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,5"
                         Height="25"/>

                <!-- 按钮区域 -->
                <StackPanel Grid.Row="2" 
                            Grid.ColumnSpan="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="删除选中用户" 
                            Command="{Binding RemoveUserCommand}"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#FF5252"
                            Foreground="White"/>

                    <Button Content="添加用户" 
                            Command="{Binding AddUserCommand}"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"/>
                    <Button Content="测试" 
                            Command="{Binding ShowWindowCommand}"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
